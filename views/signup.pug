extends base

block content
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg Sign Up
            form.form.form--signup
                .form__group
                    label.form__label(for='text') Full Name
                    input#name.form__input(type='text', placeholder='Full Name', required)
                .form__group
                    label.form__label(for='email') Email address
                    input#email-signup.form__input(type='email', placeholder='you@example.com', required)
                .form__group.ma-bt-md
                    label.form__label(for='password') Password
                    input#password-signup.form__input(type='password', placeholder='••••••••', required, minlength='8')
                .form__group.ma-bt-md
                    label.form__label(for='password') Confirm Password
                    input#passwordConfirm.form__input(type='password', placeholder='••••••••', required, minlength='8')
                .form__group
                    button(type='submit').btn.btn--green Sign Up